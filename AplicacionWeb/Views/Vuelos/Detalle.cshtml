@using Dominio
@model Vuelo
@{
	ViewBag.Title = $"Vuelo - {Model.Numero} ";
}

<div class="py-5">
	<h2 class="text-center text-primary fs-1">Detalle de Vuelo</h2>
</div>

<div class="d-flex justify-content-center align-items-center pb-1">
    <div class="card card-compra">
        <form method="get" action="~/Pasaje/Comprar/@Model.Numero" class="compra-form">
            <h5 class="card-header text-center">@Model.Numero</h5>
            <div class="card-body card-body-centro">
                <h5 class="card-title">@Model.Ruta.Salida.Codigo - @Model.Ruta.Llegada.Codigo</h5>
                <p class="card-text">@string.Join(", ", Model.Frecuencia)</p>

                <input type="date" name="fecha" class="form-control mb-2 w-75" required />
                <select name="equipaje" class="form-select mb-3 w-75" required>
                    <option value="LIGHT">LIGHT</option>
                    <option value="CABINA">CABINA</option>
                    <option value="BODEGA">BODEGA</option>
                </select>

                <button type="submit" class="btn btn-primary">Comprar</button>
            </div>
        </form>
    </div>
</div>